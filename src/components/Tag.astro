---
interface Props {
	tag: string;
	href?: string;
	active?: boolean;
	class?: string;
}

const { tag, href, active = false, class: className = "" } = Astro.props;
const baseClasses = "inline-block rounded-full px-3 py-1 text-sm transition-colors duration-200";
const stateClasses = active
	? "bg-primary-500 text-white"
	: "bg-stone-200 dark:bg-stone-700 hover:bg-primary-100 dark:hover:bg-primary-800";
---

{href ? (
	<a href={href} class:list={[baseClasses, stateClasses, className]}>
		{tag}
	</a>
) : (
	<span class:list={[baseClasses, stateClasses, className]}>
		{tag}
	</span>
)}
